<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>导航页面</title>
    <style>
        .contentPage {
            width: 1000px;
            margin: 0 auto;  
                                    
        }
    </style>
</head>
<body>
    <div class="contentPage">
        <h3>
            首页
        </h3>
        <a href="/index">index.html</a>        
        <h3>
            components
        </h3>
        <div id="componets"></div>
    </div>
</body>
</html>
<script>
    $(function() {
        $.ajax({
             type: "GET",
             url: "/get/menu",
             data: {},
             dataType: "json",
             success: function(data){
                 var html = ''
                 Object.keys(data.compoents).forEach(function(_key) {
                     html += '<h5>'+ _key +'</h5>'
                     for(var i =0; i < data.compoents[_key].length ; i ++) {
                         if (data.compoents[_key][i].split('/')[3].indexOf('preview') > -1) {
                            html += '<a href="'+_key+'.preview.ejs">'+ data.compoents[_key][i] +'</a>'
                            html += '<span style="color: #FFC107;font-size: 12px;margin-left: 10px;">(独立模块,支持预览,模块独立调试)</span>'
                         } else {
                            html += '<a href="'+data.compoents[_key][i].split('/')[3]+'">'+ data.compoents[_key][i] +'</a>'
                            if (data.compoents[_key][i].split('/')[3].indexOf('ejs') > -1) {
                                html += '<span style="color: #FFC107;font-size: 12px;margin-left: 10px;">(独立模块,支持预览,但是js是包含所有模块)</span>'
                            }
                         }
                        
                         html += '</br>'
                     }
                 })
                 $('#componets').append(html)
             }
         });
    })
</script>